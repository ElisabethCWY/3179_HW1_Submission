{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Immigrations to Malaysia (2020-2024)",
    "width": 800,
    "height": 400,
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1/refs/heads/main/ne_1.json"}
    },
     "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1/refs/heads/main/aggregated_arrivals_soe.csv"
          },
          "key": "soe",
          "fields": ["total_arrivals"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "total_arrivals",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "total_arrivals", "type": "quantitative"}
      ]
    }
  }
